!!!
%html
  %head
    %title= page_title
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = nav_bar do
        = menu_group do
          = menu_item 'Home', root_path
          = menu_item 'Genes', genes_path, data: {toggle: 'tooltip', placement: 'right', title: 'Please be careful, the whole table will take some time to load.'}, class: 'has-tooltip'
          = menu_item 'Сomplexes', protein_complexes_path
          = menu_item 'Histones and protamines', histones_path
          = menu_item 'Samples', samples_path
          = menu_item 'DB description', epigene_description_path
        = form_tag epigene_search_path, class: 'pull-right navbar-search' do
          = label_tag do
            Search:
            = text_field_tag 'search', params[:search]
          = select_tag 'kind', options_for_select({'Genes' => :genes, 'Сomplexes' => :protein_complexes, 'Histones and protamines' => :histones},  [:genes, :protein_complexes, :histones].include?(params[:controller].to_sym) ? params[:controller].to_sym : :genes)
          = submit_tag 'Search'
    %div{class: ['container', "controller-#{params[:controller]}", "action-#{params[:action]}"] }
      = yield
    %footer